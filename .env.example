# ============================================
# HEDERA COMMUNITY BOT - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# DISCORD CONFIGURATION (REQUIRED)
# ============================================

# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Your Discord application/client ID from https://discord.com/developers/applications
DISCORD_APPLICATION_ID=your_application_id_here

# ============================================
# DISCORD CHANNEL IDS (REQUIRED)
# ============================================

# Channel where welcome messages are sent when new members join
WELCOME_CHANNEL_ID=your_welcome_channel_id_here

# Channel where users react to get verified (reaction roles)
VERIFICATION_CHANNEL_ID=your_verification_channel_id_here

# Channel where daily collection reports are posted
DAILY_MESSAGE_CHANNEL_ID=your_daily_message_channel_id_here

# Channel where NFT sales notifications are posted
SALES_CHANNEL_ID=your_sales_channel_id_here

# ============================================
# DISCORD ROLE IDS (REQUIRED)
# ============================================

# Role ID that gets assigned when users react in verification channel
VERIFIED_ROLE_ID=your_verified_role_id_here

# ============================================
# REACTION ROLES CONFIGURATION (REQUIRED)
# ============================================

# Emoji name for reaction roles (e.g., 'Splat' for custom emoji or 'âœ…' for Unicode)
# For custom emoji: use just the name without colons (e.g., 'Splat')
# For Unicode emoji: use the actual emoji character (e.g., 'âœ…' or 'ðŸ‘‹')
REACTION_EMOJI=âœ…

# ============================================
# HEDERA CONFIGURATION (REQUIRED)
# ============================================

# Your Hedera NFT token IDs (comma-separated, no spaces)
# Example: 0.0.1234567,0.0.7654321
HEDERA_TOKEN_IDS=0.0.1234567,0.0.7654321

# Primary/legacy token ID (usually the first token in your collection)
HEDERA_TOKEN_ID=0.0.1234567

# New/current token ID (used for daily messages and public displays)
HEDERA_NEW_TOKEN_ID=0.0.7654321

# Hedera Mirror Node URL (optional - defaults to public mainnet node)
HEDERA_MIRROR_NODE_URL=https://mainnet-public.mirrornode.hedera.com

# ============================================
# SENTX API CONFIGURATION (OPTIONAL)
# ============================================
# Required for marketplace data (floor price, listings) in daily messages
# Get your API key from https://sentx.io

# SentX API key for marketplace data
SENTX_API_KEY=your_sentx_api_key_here

# SentX auth token (if required by your API plan)
SENTX_AUTH_TOKEN=your_sentx_auth_token_here

# ============================================
# FAUCET/GIVEAWAY CONFIGURATION (OPTIONAL)
# ============================================
# Only required if you want to enable NFT giveaway features
# This requires a Hedera account with NFTs to distribute

# Hedera account ID that holds NFTs for giveaways (e.g., 0.0.1234567)
FAUCET_ACCOUNT_ID=0.0.1234567

# Private key for the faucet account (ECDSA or ED25519)
# KEEP THIS SECRET! Never share or commit this to version control!
FAUCET_PRIVATE_KEY=your_private_key_here

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL database URL (automatically provided by Railway)
# Format: postgresql://user:password@host:port/database
# Leave empty for local development (will use SQLite instead)
DATABASE_URL=

# SQLite database path for local development (optional)
# Only used when DATABASE_URL is not set
DATABASE_PATH=./data.db

# ============================================
# ENVIRONMENT
# ============================================

# Set to 'production' when deploying to Railway
# Leave empty or set to 'development' for local testing
NODE_ENV=production

